  "definitions": {
    "ActorDTO": {
      "type": "object",
      "required": [
        "firstName",
        "lastName"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "lastUpdate": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "FilmDTO": {
      "type": "object",
      "required": [
        "title",
        "languageId",
        "rentalDuration",
        "rentalRate",
        "replacementCost"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "releaseYear": {
          "type": "integer"
        },
        "languages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ApiFilmLanguage"
          }
        },
        "originalLanguages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ApiFilmLanguage"
          }
        },
        "rentalDuration": {
          "type": "integer"
        },
        "rentalRate": {
          "type": "number",
          "format": "float"
        },
        "length": {
          "type": "integer"
        },
        "replacementCost": {
          "type": "number",
          "format": "float"
        },
        "rating": {
          "$ref": "#/definitions/FilmRating"
        },
        "categories": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ApiFilmCategory"
          }
        },
        "specialFeatures": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "actors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ActorDTO"
          }
        },
        "inventories": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FilmInventoryDTO"
          }
        },
        "lastUpdate": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "FilmRating": {
      "type": "string",
      "enum": [
        "G",
        "PG",
        "PG-13",
        "R",
        "NC-17"
      ]
    },
    "ApiFilmCategory": {
      "type": "string",
      "enum": [
        "Action",
        "Animation",
        "Children",
        "Classics",
        "Comedy",
        "Documentary",
        "Drama",
        "Family",
        "Foreign",
        "Games",
        "Horror",
        "Music",
        "New",
        "SciFi",
        "Sports",
        "Travel"
      ]
    },
    "ApiFilmLanguage": {
      "type": "string",
      "enum": [
        "English"
      ]
    },
    "FilmInventoryDTO": {
      "type": "object",
      "properties": {
        "storeId": {
          "type": "integer",
          "format": "int64"
        },
        "quantity": {
          "type": "integer",
          "format": "int32"
        }
      }
    }
